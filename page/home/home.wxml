<text class="tt">事件处理</text>

<!-- 1.事件处理的回顾 -->
<!-- 第一种写法 -->
<button bindtap="btnclick">按钮</button>
<!-- 第二种写法也是合法的 -->
<button bind:tap="btnclick">按钮</button>
<!-- 第三种写法 -->
<button catch:tap="btnclick">按钮</button>

<!-- 2.常见事件 -->
<view class="box"
      bindtouchstart="handletouchstart"
      bindtouchmove="handletouchmove"
      bindtouchend="handletouchend"
      bindtap="handletap"
      bindlongpress="handlelongpress"></view>

<!-- 3.事件对象的分析 -->
<!-- (1)event参数的分析 -->
<button bindtap="eventbtnclick">事件对象</button>

