<!-- （3）targe/currenttarget的区别：见pdf -->

<!-- 4.事件参数的传递 -->

<!-- 监听几个view的点击事件,并取出title和index -->
<view class="box2">
  <block wx:for="{{titles}}" wx:key="{{index}}">
    <view class="box3" 
    bindtap="handleitemclick"
    data-item="{{item}}"
    data-index="{{index}}"
    >{{item}}</view>
  </block>
</view>
